<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/whole_bg">
	<include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/cxstockin_asset_info_header"/>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bg_top"
            android:paddingLeft="3.0dp">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_img"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3.0dip"/>
	        <EditText 
	            android:id="@+id/et_user_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:hint="ERP用户名"
	            android:background="@null"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="3.0dip"
	            android:singleLine="true"/>
	     </LinearLayout>
	     <ImageView android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="@drawable/login_medle_line_bg"/>
	     <LinearLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/login_bg_bottom"
	            android:paddingLeft="3.0dp">
		         <ImageView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/password_img"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="3.0dip"/>

		        <EditText
		            android:id="@+id/et_password"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:hint="ERP密码"
		            android:inputType="textPassword"
		            android:background="@null"
		            android:layout_gravity="center_vertical" 
		            android:layout_marginLeft="3.0dip"
		            android:singleLine="true"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:background="@drawable/login_login_bg" />

</LinearLayout>