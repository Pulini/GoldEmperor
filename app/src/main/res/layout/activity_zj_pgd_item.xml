<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white">

    <com.goldemperor.Widget.ScrollListenerHorizontalScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_followNumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="计划跟踪号"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_style"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="工厂型体"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_orderCount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="派工单号"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="派工日期"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_materialcode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="物料代码"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_materialname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="物料名称"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="单位"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sizeItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sizeNumItem"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_reportednumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="已汇报数量"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_alreadynumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="已入库数"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_nonumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="未入库数"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_group"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="组别"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_batch"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="批次"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_planstarttime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="计划开工日期"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_planendtime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="计划完工日期"
                android:textSize="20dp" />

        </LinearLayout>
    </com.goldemperor.Widget.ScrollListenerHorizontalScrollView>
</RelativeLayout>