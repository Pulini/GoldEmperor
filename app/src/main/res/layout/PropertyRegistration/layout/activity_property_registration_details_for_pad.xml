<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/daily_report_bkg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/IV_Back"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="固定资产登记"
            android:textColor="#333333"
            android:textSize="25sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/TV_Satus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="状态"
            android:textColor="#333333"
            android:textSize="20sp" />

        <com.goldemperor.Widget.fancybuttons.FancyButton
            android:id="@+id/FB_InitiateAudit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:padding="7dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#00acfe"
            fancy:fb_focusColor="#8cc9f8"
            fancy:fb_radius="10dp"
            fancy:fb_text="发起审核"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="20dp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/VP_Registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" />
</LinearLayout>