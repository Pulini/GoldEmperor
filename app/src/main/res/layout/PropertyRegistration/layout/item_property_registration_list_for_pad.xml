<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_BKG"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TV_Number"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="财产编号"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#555555" />

    <TextView
        android:id="@+id/TV_Name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="财产名称"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#555555" />

    <TextView
        android:id="@+id/TV_Model"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="规格"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#555555" />

    <TextView
        android:id="@+id/TV_BuyDate"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2019-01-20 17:22:33"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#555555" />

    <TextView
        android:id="@+id/TV_RegistrationDate"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2019-01-20 17:22:33"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#555555" />

    <TextView
        android:id="@+id/TV_Qty"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="数量"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#555555" />


    <TextView
        android:id="@+id/TV_Satus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="状态"
        android:textColor="#333333"
        android:textSize="15sp" />
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#555555" />
    <TextView
        android:id="@+id/TV_SAP_PurchaseNum"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SAP"
        android:textColor="#333333"
        android:textSize="15sp" />
    <com.goldemperor.Widget.fancybuttons.FancyButton
        android:id="@+id/FB_Close"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff5555"
        fancy:fb_focusColor="#8cc9f8"
        fancy:fb_radius="3dp"
        fancy:fb_text="入库确认"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="15sp"/>

    <com.goldemperor.Widget.fancybuttons.FancyButton
        android:id="@+id/FB_Print"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#00acfe"
        fancy:fb_focusColor="#8cc9f8"
        fancy:fb_radius="3dp"
        fancy:fb_text="打印贴标"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="15sp" />
</LinearLayout>