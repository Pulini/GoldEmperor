<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL_BKG"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/TV_FOrganizeName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="区域"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_FParentDeptID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="所属课"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_FDeptID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="组别"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_FToDayMustQty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="今日目标"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_FTimeMustQty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="时段目标"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_FTimeQty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="时段累计"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_FNoTimeQty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="时段差异"
        android:textColor="#333333"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/TV_FTimeFinishRate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="时段达成"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_FNoDoingReason"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="原因分析"
        android:textColor="#333333"
        android:textSize="20sp" />


</LinearLayout>