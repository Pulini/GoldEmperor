<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL_BKG"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TV_MonthOrderOfCast"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="月排名"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_MonthDepName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="月班组"
        android:textColor="#333333"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/TV_MonthPlanQty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="累计目标产量"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_MonthQty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="累计产量"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_MonthHGL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="月合格率"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_MonthDCL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="月达成率"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_MonthRJCN"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="月人均产能"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_MonthHourAvgPay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="月人均件资"
        android:textColor="#333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_MonthComprehensiveMark"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_black"
        android:gravity="center"
        android:text="月综合评分"
        android:textColor="#333333"
        android:textSize="20sp" />


</LinearLayout>