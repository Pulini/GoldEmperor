<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
    <TextView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_border"
        android:text="基本信息"
        android:textSize="21dp"
        android:textColor="#FF000000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/textview_border"
            android:text="质检员"
            android:textSize="21dp"
            android:textColor="#FF000000"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/name"
            android:background="@drawable/textview_border"
            android:text="姓名"
            android:textSize="21dp"
            android:textColor="#FF000000"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_border"
                android:text="员工工号"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/jobNumber"
                android:background="@drawable/textview_border"
                android:text="工号"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_border"
                android:text="派工单号"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/PaiNumber"
                android:background="@drawable/textview_border"
                android:text="单号"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_border"
                android:text="派工总量"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/PaiCount"
                android:background="@drawable/textview_border"
                android:text="总数"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_border"
                android:text="所属产线"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/Line"
                android:background="@drawable/textview_border"
                android:text="产线"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/CountText"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_border"
                android:text="当日质检总数(双)"
                android:textSize="19dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/Count"
                android:background="@drawable/textview_border"
                android:text="总数"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/qualifiedCountText"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_border"
                android:text="合格总数(双)"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/qualifiedCount"
                android:background="@drawable/textview_border"
                android:text="数量"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/unqualifiedCountText"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_border"
                android:text="不合格总数(双)"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/unqualifiedCount"
                android:background="@drawable/textview_border"
                android:text="数量"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/textview_border"
                android:text="返工原因"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/textview_border"
                android:text="原因"
                android:textSize="21dp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btn_unqualified"
        android:layout_alignBottom="@+id/content"
        android:layout_toRightOf="@+id/content"
        android:layout_marginLeft="50dp"

        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="#ff0000"
        fancy:fb_focusColor="#8cc9f8"
        fancy:fb_iconPosition="top"
        fancy:fb_radius="10dp"
        fancy:fb_text="不合格"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="30dp"/>

</RelativeLayout>
